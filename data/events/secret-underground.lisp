(defevent secret-underground-pipe-rpgmaker-dungeon
  :lambda (lambda (self)
            (declare (ignore self))
            (setf (getf (warp-points-of (get-zone '(0 0 0 yadfa-zones:secret-underground))) 'yadfa-zones:rpgmaker-dungeon)
                  '(0 31 0 yadfa-zones:bandits-domain))
